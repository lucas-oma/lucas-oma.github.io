---
import BaseLayout from '@/layouts/BaseLayout'
import TitlePage from '@/components/TitlePage'
import { profileData } from '@/data/profile'
import { SOCIALNETWORKS } from '@/data/links'

const { name, avatar, resumeLink, publications, projects } = profileData
---

<BaseLayout title="About Me">
  <!-- Meta Tags for SEO -->
  <head>
    <meta name="description" content="Get to know me!" />
    <meta property="og:title" content="About Me" />
    <meta property="og:description" content="Get to know me!" />
    <meta property="og:image" content={avatar} />
    <meta property="og:type" content="website" />
  </head>

  <!-- About Me Section -->
  <section class="flex flex-col items-center text-center mt-12">
    <img src={avatar} alt={name} class="w-40 h-40 rounded-full shadow-lg mb-4" />
    <h1 class="text-3xl font-bold">{name}</h1>
    <p class="text-sm text-gray-500 dark:text-gray-400">M.S. in Computer Science, AI Concentration - New York University, Courant</p>
    <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mt-2">
    I'm an AI enthusiast ðŸ¤– who enjoys solving complex problems, exploring how things work, and creating efficient solutions. Whether Iâ€™m experimenting with AI models, researching new ideas, optimizing code, or contributing to open-source projects, I enjoy pushing boundaries and constantly learning.
    </p>

    <!-- Social Links -->
    <div class="flex gap-4 mt-4">
      {
        SOCIALNETWORKS.map((network) => (
          <a href={network.url} target="_blank" class="text-blue-500 hover:underline" aria-label={network.name}>
            {<network.icon />}
          </a>
        ))
      }
    </div>

    <!-- Resume Button -->
    <div class="flex gap-4 mt-4">
      {resumeLink && (
        <a href={resumeLink} target="_blank" rel="noopener noreferrer" 
           class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
          View Resume
        </a>
      )}
      
      <a href="/" 
         class="px-6 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition">
        Read Blog
      </a>
    </div>
  </section>

  <!-- Experience & Projects -->
  <!-- <section class="mt-12 max-w-3xl mx-auto">
    <h2 class="text-2xl font-semibold mb-6">Projects & Experience</h2>
    <ul class="space-y-6">
      {projects.map((project) => (
        <li class="border-b border-gray-300 pb-4">
          <h3 class="text-lg font-semibold">
            {project.title}
          </h3>
          <p class="text-sm text-gray-500 italic">{project.role}</p>
          <p class="text-gray-600 dark:text-gray-400 text-sm mt-1">{project.description}</p>
          {project.url && (
            <a href={project.url} target="_blank" class="text-blue-500 hover:underline text-sm">
              View Project
            </a>
          )}
        </li>
      ))}
    </ul>
  </section> -->

  <!-- Publications Section -->
  <section class="mt-12 max-w-3xl mx-auto">
    <h2 class="text-2xl font-semibold mb-6">Publications</h2>
    <ul class="space-y-6">
      {publications.map((pub) => (
        <li class="border-b border-gray-300 pb-4">
          <h3 class="text-lg font-semibold">
            <a href={pub.url} target="_blank" class="text-blue-500 hover:underline">
              {pub.title}
            </a>
          </h3>
          <p class="text-sm text-gray-500 italic">{pub.publisher}</p>  <!-- ðŸ‘ˆ Publisher in small text -->
          <p class="text-gray-600 dark:text-gray-400 text-sm mt-1">{pub.abstract}</p>
          <p class="text-xs text-gray-500 mt-1"><strong>Keywords:</strong> {pub.keywords}</p>
        </li>
      ))}
    </ul>
  </section>
</BaseLayout>
