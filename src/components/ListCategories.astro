---
import { getCategories } from '@/utils'
import Category from '@/components/Category'
const categories = await getCategories()

const { activeCategory } = Astro.props
---

<div class='relative flex min-w-full gap-5'>
	<!-- "About Me" on the left -->
	<Category />
	<Category name='About Me' activeCategory={activeCategory} />
  
	<!-- Wrap categories in a flex container and push to the right -->
	<div class="flex gap-5 ml-auto">
	  {categories.map((category: string) => (
		<Category name={category} activeCategory={activeCategory} />
	  ))}
	</div>
  
	<div class='hidden sm:block absolute w-full bottom-0 border-b-2 -z-40 dark:border-gray-600'></div>
  </div>
  
